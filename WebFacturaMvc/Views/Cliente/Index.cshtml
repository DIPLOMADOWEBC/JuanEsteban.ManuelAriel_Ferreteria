@model IEnumerable<WebFacturaMvc.Models.cliente>
@{
    ViewBag.Title = "Lista de Clientes";
}

@{
    if (Session["IsLog"] == null)
    {
        Response.Redirect("~/Auth/Index");
    }


}

<a href="~/Reportes/wfReport.aspx">Reporte</a>
<h2 class="text-center text-success">Listado de Clientes</h2>
<div class="well well-sm"><a class="btn btn-primary" @Html.ActionLink("Nuevo", "Create")</a></div>
@*<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Nuevo</a></div>*@
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Código </th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>DNI</th>
            <th>Direccion</th>
            <th>Teléfono</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>

                <td>@Html.DisplayFor(modelItem => objCliente.idCliente)</td>
                <td>@Html.DisplayFor(modelItem => objCliente.nombre)</td>
                <td>@Html.DisplayFor(modelItem => objCliente.apPaterno)</td>
                <td>@Html.DisplayFor(modelItem => objCliente.dni)</td>
                <td>@Html.DisplayFor(modelItem => objCliente.direccion)</td>
                <td>@Html.DisplayFor(modelItem => objCliente.telefono)</td>

                <td><a class="btn btn-success" href="@Url.Action("Find", "Cliente", new { id = objCliente.idCliente })"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="@Url.Action("Update", "Cliente", new { id = objCliente.idCliente })"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="@Url.Action("Delete", "Cliente", new { id = objCliente.idCliente })"><span class="fa fa-book"></span></a></td>

                @*
                    <td><a class="btn btn-success" href="~/Cliente/Find/@objCliente.idCliente"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                    <td><a class="btn btn-info" href="~/Cliente/Update/@objCliente.idCliente"><span class="fa fa-edit"></span></a></td>
                    <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@objCliente.idCliente"><span class="fa fa-book"></span></a></td>
                *@
            </tr>
        }
    </tbody>
</table>

